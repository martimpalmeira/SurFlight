import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		//instanciar viagem
		Viagem viagem = new Viagem("30/03/2022","Salvador-BA", "São Paulo-SP",1,2,3);
		//instanciar passageiro
		Passageiro passageiro = viagem.cadastrarPassageiro("07277968522", "Martim", "12345678");
		while(viagem.podeCadastrarBagagemDoPassageiro(passageiro)) {
			System.out.print("Deseja cadastrar?\n-sim\n-não");
			String querCadastrar = sc.next();
			if(querCadastrar.equals("sim")) {
				viagem.cadastrarBagagem(sc.next(), passageiro);
			}else {
				break;
			}
		}
		
		sc.close();
	}

}
