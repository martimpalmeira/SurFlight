
public class Main {

	public static void main(String[] args) {

		Viagem viagem = new Viagem("01/02/2022", "Salvador - BA","São Paulo - SP", 1,2,3);
		while(true) {
			System.out.print("Na viagem foram cadastrados "+viagem.getBagagens().size()+" bagagens");
	
		Passageiro passageiro = viagem.cadastrarPassageiro("07277968522", "João Carlos", "12345678");
		
		if(viagem.podeCadastrarBagagemDoPassageiro(passageiro) && viagem.podeCadastrarBagagemNaViagem()) {
			Bagagem bagagem = viagem.cadastrarBagagem("mala",passageiro);
		}
		
		}
		
		
		
		
		
	}

}
